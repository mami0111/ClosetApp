<div class="login-wrapper">
  <div class="container">
      <div class="login">

        <h2 class="login__heading">ログイン</h2>
        
        <p class="alert"><%= alert %></p>

        <div class="login__info">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field">
            <i class="fas fa-envelope fa-fw"></i>
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@co.jp" %>
          </div>

          <div class="field">
            <i class="fas fa-lock fa-fw"></i>
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "off", :placeholder => "6文字以上のパスワード" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field pb50">
              <div class="field-check">
                <%= f.check_box :remember_me %>
              </div>
              <%= f.label :次回から自動的にログイン %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン" %>
          </div>

        <% end %>

      <%= render "devise/shared/links" %>
      <div class="signup-link">
        <%= link_to '初めてご利用の方（新規会員登録）', new_user_registration_path %>
      </div>

    </div>
  </div>
</div>
<div class="devise-wrapper">
  <div class="container">

    <%= devise_error_messages! %> 
    
    <div class="devise">
      <h2 class="devise__heading">新規登録</h2>

      <div class="devise__info">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
         

          <%# nameフォームを追加 %>
          <div class="field">
            <i class="fas fa-user fa-fw"></i>
            <%= f.label :ユーザーネーム %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder => "name" %>
          </div>

          <div class="field">
            <i class="fas fa-envelope fa-fw"></i>
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@co.jp" %>
          </div>

          <div class="field">
            <i class="fas fa-lock fa-fw"></i>
            <%= f.label :パスワード %>
            <%= f.password_field :password, autocomplete: "off", :placeholder => "6文字以上のパスワード" %>
          </div>

          <div class="field">
            <i class="fas fa-lock fa-fw"></i>
            <%= f.label :確認用パスワード %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "パスワードを再入力" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>

<!DOCTYPE html>
<html>
  <head>
    <title>ClosetApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%# jQUeryライブラリの読み込み %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%# サムネイル表示の機能 %>

    <script>
        $(function() {
        // jQuery Upload Thumbs 
        $('form input:file').uploadThumbs();
        });
    </script>

    <%# fontawesomeの読み込み %>
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">

  </head>

  <body>
    <header>
        <div class="header__logo">
            <%= link_to "ClosetApp", "/" %>
        </div>
        <div class="header__list">
            <ul>
                <% if user_signed_in? %>
                    <li><%= link_to "洋服一覧", "/cloths" %>
                    <li><%= link_to "洋服データ登録","/cloths/new" %>
                    <li><%= link_to 'ユーザ設定', edit_user_registration_path %>
                    <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
                <% else %>
                    <li><%= link_to '新規登録', new_user_registration_path %>
                    <li><%= link_to 'ログイン', new_user_session_path %>
                <% end %>
            </ul>
        </div>
    </header>
       
        <div class="error-message">
            <div class="container">
                <!-- <p class="notice"><%= notice %></p> -->
                <!-- <p class="alert"><%= alert %></p> -->
            </div>
        </div>


        <%= yield %>

        <footer>
            <h3>ClosetApp</h3>
            <p>Copyright © ◯◯◯,Inc. All Rights Reserved</p>
        </footer>

    </body>
</html>
